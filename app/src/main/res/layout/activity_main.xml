<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7fde54">

        <ImageView
            android:id="@+id/imv_icon_intro"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_launcher"/>

    </FrameLayout>


    <ImageView
        android:id="@+id/imv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toStartOf="@+id/imv_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imv_camera"
        android:layout_alignRight="@+id/imv_camera"
        android:layout_below="@+id/imv_camera"
        android:gravity="center"
        android:text="@string/camera"
        app:layout_constraintEnd_toEndOf="@+id/imv_camera"
        app:layout_constraintStart_toStartOf="@+id/imv_camera"
        app:layout_constraintTop_toBottomOf="@+id/imv_camera"/>


    <ImageView
        android:id="@+id/imv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imv_camera"
        android:layout_toEndOf="@+id/imv_camera"
        android:src="@drawable/ic_image"
        app:layout_constraintBottom_toTopOf="@+id/tv_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imv_camera"
        app:layout_constraintTop_toTopOf="@+id/imv_camera"/>

    <TextView
        android:id="@+id/tv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imv_gallery"
        android:layout_alignRight="@+id/imv_gallery"
        android:layout_below="@+id/imv_gallery"
        android:gravity="center"
        android:text="@string/gallery"
        app:layout_constraintEnd_toEndOf="@+id/imv_gallery"
        app:layout_constraintStart_toStartOf="@+id/imv_gallery"
        app:layout_constraintTop_toBottomOf="@+id/imv_gallery"/>

</android.support.constraint.ConstraintLayout>
